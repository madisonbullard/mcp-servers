{
	"name": "@madisonbullard/mcp-server-tui",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "rm -rf dist && tsup src/cli.tsx --dts --format esm --external which",
		"postbuild": "shx chmod +x dist/cli.js",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit"
	},
	"files": ["dist"],
	"dependencies": {
		"@inkjs/ui": "2.0.0",
		"ink": "5.1.0",
		"ink-link": "4.1.0",
		"meow": "13.2.0",
		"react": "18.2.0"
	},
	"devDependencies": {
		"@types/react": "18.0.32",
		"shx": "0.3.4",
		"ts-node": "10.9.2",
		"typescript": "5.7.3"
	}
}
