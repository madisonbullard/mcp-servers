{
	"name": "@madisonbullard/notion-api-client",
	"version": "1.5.0",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"access": "public",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build:watch": "bun run build --watch",
		"generate-openapi": "bunx postman-to-openapi './assets/Notion API.postman_collection.json' -f ./assets/openapi.yml",
		"generate-api-client": "bunx @openapitools/openapi-generator-cli generate -i ./assets/openapi.yml -g typescript-fetch -o ./src/generated",
		"generate": "bun run generate-openapi && bun run generate-api-client"
	},
	"devDependencies": {
		"shx": "0.3.4",
		"tsup": "8.4.0"
	},
	"engines": {
		"node": ">=16.17.0"
	}
}
