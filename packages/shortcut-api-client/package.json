{
	"name": "@madisonbullard/shortcut-api-client",
	"version": "1.5.0",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"access": "public",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./*.json": "./src/*.json"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "rm -rf dist && tsup src/index.ts --dts --format esm",
		"postbuild": "shx chmod +x dist/*.js",
		"build:watch": "bun run build --watch",
		"generate-api-client": "bunx swagger-typescript-api -p https://developer.shortcut.com/api/rest/v3/shortcut.swagger.json -o ./src -n index.ts --extract-request-params --extract-request-body --clean-output",
		"generate-api-client2": "bunx typed-openapi ./src/shortcut.openapi.json -o ./src/index.ts -r zod",
		"generate-openapi": "bunx swagger2openapi https://developer.shortcut.com/api/rest/v3/shortcut.swagger.json -o ./src/shortcut.openapi.json"
	},
	"devDependencies": {
		"shx": "0.3.4",
		"tsup": "8.4.0",
		"zod": "3.24.2"
	},
	"engines": {
		"node": ">=16.17.0"
	}
}
