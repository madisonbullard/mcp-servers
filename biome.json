{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"packages/shortcut-api-client/src/index.ts",
			"packages/shortcut-api-client/src/public/openapi.json",
			"packages/notion-api-client/assets",
			"packages/notion-api-client/src/index.ts",
			"packages/notion-api-client/src/public/openapi.json",
			"packages/coderabbit-api-client/src/index.ts",
			"packages/coderabbit-api-client/src/public/openapi.json",
			"dist"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
